<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>We invite you to join us on May 20th</h1>
        <p>Come celebrate our love.</p>
      </div>
    </div>
    <div class="row iphone">
      <div class="col-md-4 col-sm-4">
        <% if defined? error_message %>
          <p class="bg-danger"><%= error_message %></p>
        <% end %>
        <form action="/thanks" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" id="name">
          </div>
          <!-- <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" name="email" id="email">
          </div> -->
          <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" name="address" id="name">
          </div>
          <div class="form-group">
            <label for="city">City</label>
            <input type="text" class="form-control" name="city" id="name">
          </div>
          <div class="form-group">
            <label for="state">State</label>
            <input type="text" class="form-control" name="state" id="name">
          </div>
          <div class="form-group">
            <label for="zip-code">Zip Code</label>
            <input type="text" class="form-control" name="zip-code" id="name">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
